<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="BaseText" parent = "TextAppearance.AppCompat">
        <item name="android:fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/black</item>
    </style>


    <style name="SideText" parent = "BaseText">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="Header1" parent = "BaseText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="BtnFillStyle" parent = "BaseText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="BtnTransparentStyle" parent = "BaseText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/dark_purple</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BtnOutlineStyle" parent = "BaseText">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="Header1Colorful" parent = "Header1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/purple</item>
    </style>

    <style name="Header2" parent = "Header1">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Header3" parent = "Header1">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Header3Colorful" parent = "Header3">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/dark_purple</item>
    </style>

</resources>